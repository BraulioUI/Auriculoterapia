<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChangeKeyWordActivity">

    <TextView
        android:id="@+id/tv_palabraClaveActual"
        android:layout_width="94dp"
        android:layout_height="49dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="114dp"
        android:text="Palabra clave actual:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_palabraClaveNueva"
        android:layout_width="94dp"
        android:layout_height="51dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:text="Palabra clave nueva:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_palabraClaveActual" />

    <EditText
        android:id="@+id/et_palabraClaveActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="114dp"
        android:ems="10"
        android:hint="actual"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/tv_palabraClaveActual"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_PalabraClaveNueva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="nuevo"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/tv_palabraClaveNueva"
        app:layout_constraintTop_toBottomOf="@+id/et_palabraClaveActual" />

    <Button
        android:id="@+id/btn_actualizarKeyWord"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:text="Actualizar"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancelarKeyword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_palabraClaveNueva" />

    <Button
        android:id="@+id/btn_cancelarKeyword"
        android:layout_width="132dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="60dp"
        android:text="Cancelar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_palabraClaveNueva" />
</androidx.constraintlayout.widget.ConstraintLayout>