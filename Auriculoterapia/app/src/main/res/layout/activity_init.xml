<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InitActivity">

    <Button
        android:id="@+id/bt_paciente"
        android:layout_width="237dp"
        android:layout_height="115dp"
        android:layout_marginTop="216dp"
        android:backgroundTint="#6D82E6"
        android:text="@string/pacient"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_especialista"
        android:layout_width="237dp"
        android:layout_height="115dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="265dp"
        android:backgroundTint="#6D82E6"
        android:text="@string/especialista"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_paciente" />
</androidx.constraintlayout.widget.ConstraintLayout>