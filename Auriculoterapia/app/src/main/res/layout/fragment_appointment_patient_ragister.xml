<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".fragments.patient.AppointmentPatientRagisterFragment">


    <TextView
        android:id="@+id/celularTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="70dp"
        android:inputType="phone"
        android:text="@string/num_celular_text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/celularEditText"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:inputType="phone"
        android:hint="Ingrese su nÃºmero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toEndOf="@+id/celularTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pacienteTextView3"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="24dp"
        android:text="@string/date_text"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewFechaPaciente"
        app:layout_constraintEnd_toStartOf="@+id/textViewFechaPaciente"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewFechaPaciente"
        android:layout_width="120dp"
        android:layout_height="32dp"

        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/timeButtonDialogPatient"
        app:layout_constraintTop_toBottomOf="@+id/celularEditText" />

    <ImageButton
        android:id="@+id/dateButtonDialogPatient"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:tint="#F6F4F4"
        android:background="@color/colorPrimary"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="48dp"
        android:src="@drawable/date_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celularEditText" />


    <TextView
        android:id="@+id/pacienteTextView4"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="24dp"
        android:text="@string/time_text"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/pacienteTextViewHora"
        app:layout_constraintEnd_toStartOf="@+id/pacienteTextViewHora"
        app:layout_constraintHorizontal_bias="0.725"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pacienteTextViewHora"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/timeButtonDialogPatient"
        app:layout_constraintTop_toBottomOf="@+id/textViewFechaPaciente" />

    <ImageButton
        android:id="@+id/timeButtonDialogPatient"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="48dp"
        android:background="@color/colorPrimary"
        android:src="@drawable/time_image"
        android:tint="#F6F4F4"
        app:layout_constraintBottom_toTopOf="@+id/tipoAtencionSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateButtonDialogPatient"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/celularTextView5"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:text="@string/attention_text"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/registerAppointmentButtonPatient"
        app:layout_constraintEnd_toStartOf="@+id/spinnerAttentionPatient"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pacienteTextView4"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/spinnerAttentionPatient"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="68dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeButtonDialogPatient" />

    <Button
        android:id="@+id/registerAppointmentButtonPatient"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:text="@string/register_appointment_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerAttentionPatient"
        app:layout_constraintVertical_bias="0.014" />


</androidx.constraintlayout.widget.ConstraintLayout>