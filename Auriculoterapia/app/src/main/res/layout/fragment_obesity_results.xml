<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.specialist.results.ObesityResultsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Cantidad de pacientes e indicador de gravedad IMC\npor categoría"
            android:layout_marginVertical="8dp"
            android:textStyle="bold"
            />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            >

            <TableRow
                android:background="#E5E9EC">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IMC"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
            </TableRow>
            <TableRow
                android:background="#E5E9EC">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Categoría"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cantidad"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Indicador"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    />
            </TableRow>

            <!-- DATA  -->

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pacientes Adolescentes"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />

                <TextView
                    android:id="@+id/tvCantidadAdolescentes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="1"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/tvIndicadorAdolescentes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF0000"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />

            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pacientes Jóvenes"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/tvCantidadJovenes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/tvIndicadorJovenes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF0000"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />

            </TableRow>
            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Pacientes Adultos"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/tvCantidadAdultos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/tvIndicadorAdultos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF0000"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />

            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pacientes Adultos Mayores"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/tvCantidadAdultosMayores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />
                <TextView
                    android:id="@+id/tvIndicadorAdultosMayores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF0000"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    />

            </TableRow>


        </TableLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IMC promedio por cantidad de pacientes"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartImc"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="12dp"/>
        

        
    </LinearLayout>

</ScrollView>