<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="resultados"
            type="java.util.List&lt;com.example.android.auriculoterapia_app.models.helpers.ResponsePacientesObesidad&gt;"
            />
    </data>
    
<ScrollView


    xmlns:bind="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.specialist.results.ObesityResultsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Cantidad de pacientes e indicador de gravedad IMC\npor categoría"
            android:layout_marginVertical="8dp"
            android:textStyle="bold"
            />

        <include
            android:id="@+id/IMCTable"
            layout="@layout/table_layout"
            bind:resultados="@{resultados}"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IMC promedio por cantidad de pacientes"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            />


        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartImc"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Cantidad de pacientes e indicador de gravedad %GC\npor categoría"
            android:layout_marginVertical="8dp"
            android:textStyle="bold"
            />

        
    </LinearLayout>

</ScrollView>
</layout>