<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:elevation="20dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/appointments_image" />

            <TextView
                android:id="@+id/fechaEnvioRespuestaIndicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="07-07-2020"
                android:layout_marginEnd="16dp"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/estadoTratamientoIndicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="En Proceso"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center"
                    android:text="CÃ³digo:"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/IdTratamientoIndicacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/text_size"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:text="@string/indication_tratamiento_text"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tipoTratamientoIndicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dolor lumbar"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size"/>
            </LinearLayout>



        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Inicio:"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size" />
            <TextView
                android:id="@+id/fechaInicioIndicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="2020-09-05"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Fin:"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size" />
            <TextView
                android:id="@+id/fechaFinIndicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                android:layout_gravity="center"
                android:text="2020-09-11"/>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/indicacion_frecuencia_text"
                android:textSize="@dimen/text_size"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/frecuenciaIndiacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 veces"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/indicacion_tiempo_terapia_text"
                android:textSize="@dimen/text_size"
                android:layout_gravity="center"/>


            <TextView
                android:id="@+id/tiempoTerapiaIndicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 minutos"
                android:textSize="@dimen/text_size" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="24dp"
                android:text="Foto de la oreja:"
                android:textSize="@dimen/text_size" />

            <ImageView
                android:id="@+id/fotoEditadaOreja"
                android:layout_width="130sp"
                android:layout_height="150sp"
                android:layout_gravity="end"
                android:background="#444"
                android:layout_marginBottom="24dp"
                android:src="@drawable/image_image"
                />
        </LinearLayout>


    </LinearLayout>




</androidx.cardview.widget.CardView>